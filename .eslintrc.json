{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier",
        "plugin:prettier/recommended",
        "prettier/flowtype",
        "prettier/react",
        "prettier/standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "prettier/prettier":  ["error", {"singleQuote": true, "parser": "flow"}],

        "no-unexpected-multiline": "error",
        "react/display-name": [
            "error",
            {
                "ignoreTranspilerName": false
            }
        ],

        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "^h$"
            }
        ]
    }
    }

